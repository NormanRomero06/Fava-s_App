<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".navigation.TotalCambioFragment">

    <View
        android:id="@+id/VwInicio"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/IvRegresar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/flechaizquierda"
        app:layout_constraintBottom_toBottomOf="@id/VwInicio"
        app:layout_constraintStart_toStartOf="@id/VwInicio"
        app:layout_constraintTop_toTopOf="@id/VwInicio" />

    <View
        android:id="@+id/VwCantidad1"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/VwInicio" />

    <TextView
        android:id="@+id/TvTotalPagodo"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:text="Total Pagado"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@id/VwCantidad1"
        app:layout_constraintStart_toStartOf="@id/VwCantidad1"
        app:layout_constraintTop_toTopOf="@id/VwCantidad1" />

    <TextView
        android:id="@+id/TvTotalP"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:text="0.00"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@id/VwCantidad1"
        app:layout_constraintEnd_toEndOf="@id/VwCantidad1"
        app:layout_constraintStart_toStartOf="@id/VwCantidad1"
         />

    <View
        android:id="@+id/VwCantidad2"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/VwCantidad1" />

    <TextView
        android:id="@+id/TvTotalPago"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:text="Cambio"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@id/VwCantidad2"
        app:layout_constraintStart_toStartOf="@id/VwCantidad2"
        app:layout_constraintTop_toTopOf="@id/VwCantidad2" />

    <TextView
        android:id="@+id/TvTotal"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:text="0.00"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@id/VwCantidad2"
        app:layout_constraintEnd_toEndOf="@id/VwCantidad2"
        app:layout_constraintStart_toStartOf="@id/VwCantidad2"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNuevaVenta"
        android:layout_width="150dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/btn_shape"
        android:text="Nueva Venta"
        android:textColor="@color/boton"
        android:layout_marginBottom="50dp"
        />






</androidx.constraintlayout.widget.ConstraintLayout>